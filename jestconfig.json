{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "transform": {
    "^.+\\.(t|j)sx?$": "ts-jest"
  },
  "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
  "collectCoverageFrom": ["src/**/*.{ts,js}", "!src/**/*.d.ts"],
  "testTimeout": 30000,
  "verbose": true
}
